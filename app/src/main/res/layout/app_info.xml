<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_info_item_height"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/app_info_item_padding"
    android:paddingLeft="@dimen/app_info_item_padding"
    android:paddingRight="@dimen/app_info_item_padding"
    android:paddingTop="@dimen/app_info_item_padding">

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="@dimen/app_icon_wh"
        android:layout_height="@dimen/app_icon_wh"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/app_info_item_padding"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_app_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx.xx.xx"/>

    </LinearLayout>

</LinearLayout>